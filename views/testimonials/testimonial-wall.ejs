<%- include("../partials/header") -%>

<div class="container testimonial-wall">
    <% if (isAuthenticated) { %>
        <form action="#testimonial-write">
            <button class="button pen test-button pos-testimonial-wall-btn1">Write new testimonial</button>
        </form>
    <% } %>
    <h1>Testimonials</h1>
    <div class="container testimonials-clean testimonial-data">
        <ol>
            <% testimonials.forEach(function(testimonial){ %>
                <div class="container">
                    <h3><li class="name"><%= testimonial.author %> </h3></li>
                    <p class="description"><%= testimonial.views %> </p>
                </div>
            <% }) %>
        </ol>
    </div>
</div>

<% if (isAuthenticated) { %>
    <%- include("../testimonials/testimonial-write") -%> 
<% } %>

<%- include("../partials/footer") -%>

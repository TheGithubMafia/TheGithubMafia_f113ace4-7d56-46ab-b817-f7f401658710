<%- include("partials/header", {isAuthenticated: false}) -%>

<div style="margin-top: 11vh;">

<% if(error) { %>
    <div class="alert alert-danger" role="alert" >
        <%= error %>
    </div>
<% } %>

<form action="/log-in" method="POST">
    <div class="form-group">
        <label>Your Username</label>
        <input class="form-control col-md-12 col-sm-12 col-xs-12" type="text" name="userName" autocomplete="off" value="<%= data.userName %>" required>
    </div>
    <div class="form-group">
        <label>Password</label>
        <input class="form-control col-md-12 col-sm-12 col-xs-12" type="password" name="password" autocomplete="off" value="<%= data.password %>" required>
    </div>
    <div class="text-center">
        New User? <a href="/sign-up">Sign Up</a>
    </div>
    <button class="btn btn-primary" type="submit" name="log-in">Log In</button>
</form>

</div>

<%- include("partials/footer") -%>